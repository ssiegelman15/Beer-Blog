<div class="row">
  <div class="col-auto">
    <h1>{{title}}!</h1>
    <p>{{description}}</p>
  </div>
</div>

<div class="row mt-4 mx-2">
  <div class="col-md-6">
    <h2>Edit Review:</h2>
    <form class="form editReviewForm" id="editContent" dataId="{{id}}">
      <div class="form-group row">
        <label for="reviewContent">Review:</label>
        <textarea
          class="form-input"
          id="reviewContent"
          name="reviewContent"
        >{{content}}</textarea>
      </div>
      <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Save Review!</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/editPost.js"></script>