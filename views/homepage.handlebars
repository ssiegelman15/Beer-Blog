<header class="jumbotron">
  <div class="container d=flex justify-content-center align-items-center">
    <div class="text-center">
      <h1 class="heading mt-3">
        Beer Blog
      </h1>
      <p class="subheading">
        Let's talk about beer!
      </p>
    </div>
  </div>
</header>

<div class="container mt-4 d-flex justify-content-center">
  {{#if posts}}
    {{#each posts as |post|}}
      <div class="row mb-4 project">
        <div class="col-md-5">
          <a href="/post/{{post.id}}">
            <h2>
              {{post.title}}
            </h2>
            <h4>
              {{post.description}}
            </h4>
          </a>
          <p>
            Posted by
            <span>
              {{post.user.name}}
            </span>
            on
            <span>
              {{formatDate post.dateCreated}}
            </span>
          </p>
        </div>
      </div>
      <hr class="my-3" />
    {{/each}}
  {{else}}
    <h1>THERE ARE NO POSTS YET TO SHOW!</h1>
  {{/if}}
</div>